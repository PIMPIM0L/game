<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/img/logo.png"> 
  <title>Register - Guess Emoji Game</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="login-page">

  <div class="container">
  <div class="auth-box">
    <h1><img src="/img/logo.png" style="width: 9%; margin-bottom: 10px "><br>Guess Emoji Game</h1>
    <h2>Create Account</h2>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/register" method="POST" autocomplete="off">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required minlength="6">
      </div>

      <div style="text-align: left; margin-bottom: 15px; display: flex; align-items: center; gap: 5px;">
        <input type="checkbox" id="showPassword" style="width: auto;">
        <label for="showPassword">Show Password</label>
      </div>

      <button type="submit">Create your account</button>
    </form>

    <div class="text-center">
      <p>Already have an account? <a href="/login">Login now</a></p>
    </div>
  </div>
</div>
<script>
  document.getElementById('showPassword').addEventListener('change', function() {
    const passwordInput = document.getElementById('password');
    
    if (this.checked) {
      passwordInput.type = 'text';
    } else {
      passwordInput.type = 'password';
    }
  });
</script>
</body>
</html>